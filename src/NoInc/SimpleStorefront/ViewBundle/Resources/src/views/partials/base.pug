doctype html
html(lang="en")
    head
        title noinc Simple Storefront Test!!!
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="manifest" href="/manifest.webmanifest")
        link(rel="shortcut icon" href="images/icons/logo-48.png")
        block scripts
            script(src='/scripts/noinc-vendor.js')
            script(src='/scripts/noinc.js')
            
        block stylesheets
            link(rel="stylesheet", href="/stylesheets/noinc-vendor.min.css")
            link(rel="stylesheet", href="/stylesheets/noinc.min.css")
            link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
            
    body(ng-app="noincSimpleStorefront", ng-cloak, layout="row")
            section(layout="column", flex)
                include ../partials/toolbar.pug

                md-content(layout="row", flex, ng-controller="sideNavController")
                    include ../partials/sidenav.pug
                
                    md-content#content(flex, layout-padding)
                        // All angular-defined views will be placed in the ui-view
                        ui-view
                        
                        // For non-angularized pages (i.e. the login page), extend this template
                        // and put content in this named block.
                        block content
                