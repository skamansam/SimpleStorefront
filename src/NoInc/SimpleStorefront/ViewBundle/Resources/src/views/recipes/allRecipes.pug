div
    h1 All Recipes

    md-content(layout="row")
        md-button.md-icon-button
            md-icon search
        md-input-container(flex)
          input(ng-model="query['name']", placeholder="Search for Recipe Name")

    md-card(ng-repeat="recipe in recipes | filter:query")
        img.md-card-image(ng-src="[[recipe.imagePath]]", alt="Image of recipe")
        md-card-title
            md-card-title-text
                span.md-headline [[recipe.name]]
                span.md-subhead Price: $[[recipe.price]]
            md-card-actions(layout="row", layout-align="start center")
                md-button(ng-click="purchase()", ng-enabled="canPurchase") Purchase This Item!
                md-button(ng-click="make()", ng-enabled="canMake") Make This Item!
                md-card-icon-actions
                    md-button.md-icon-button(aria-label="toggle", ng-click="toggleIngredients()")
                        md-icon(ng-show="ingredientsVisible") arrow_drop_down
                        md-icon(ng-show="!ingredientsVisible") arrow_drop_up
        md-card-content
            md-list-item.md-3-line(ng-repeat="item in recipe.recipeIngredients"  ng-class="{'md-warn': item.ingredient.stock < 1}")
                //-  img.md-avatar(ng-src="{{item.face}}?{{$index}}", alt="{{item.who}}")
                .md-list-item-text(layout="column")
                    h3 [[item.ingredientString ]]
                    h4 $[[item.ingredient.price]]
                    p [[item.ingredient.stock || 0]] [[item.ingredient.measure]] left in stock
