{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rebuild Frontend",
      "type": "shell",
      "command": "vagrant rsync && vagrant ssh -c \"cd /home/vagrant/SimpleStorefront && composer build-frontend\"",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gulp-tsc"
      ]
    },
    {
      "label": "deploy",
      "type": "shell",
      "command": "vagrant rsync",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$eslint-stylish"
      ]
    }
  ]
}